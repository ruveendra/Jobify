<body
  style="background-image: url('https://mdbcdn.b-cdn.net/img/Photos/new-templates/search-box/img4.webp');background-size: cover">

  <!-- navbar -->
  <%- include('citizen_nav')%>

    <!-- navbar -->


    <!-- update profile-->
    <section class="vh-100 bg-image p-5">
      <div class="mask d-flex align-items-center h-100 gradient-custom-3">
        <div class="container h-100">
          <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-9 col-lg-7 col-xl-6">
              <div class="card" style="border-radius: 15px;">

                <!-- alert message :sucessfull-->
                <div class=container" id="message-alert">

                </div>
                <!-- alert message -->
                <div class="card-body p-5">
                  <div class="container">
                    <h2 class="text-uppercase text-center mb-5">My bio</h2>



                    <form action="/citizen/myProfile/profileImage" enctype="multipart/form-data" method="POST"
                      id="profile-imgUpload-form">

                      <!-- current Employee status-->
                      <div class="form-outline mb-4">
                        <label class="form-label" for="bio-employee-status"></label>
                        <input type="text" id="bio-employee-status" name="bio-employee-status"
                          class="form-control form-control-lg border border-secondary" />
                        <div class="invalid-feedback"></div>
                      </div>
                      <!-- employee location -->
                      <div class="form-outline mb-4">
                        <label class="form-label" for="bio-employee-location">Current Employee location</label>
                        <input type="text" id="bio-employee-location" name="bio-employee-location"
                          class="form-control form-control-lg border border-secondary" />
                        <div class="invalid-feedback"></div>
                      </div>

                      <!-- profile -->
                      <div class="form-outline mb-4">
                        <input type="file" accept="image/*" name="avatar" id="avatar">

                      </div>
                      <div class="form-outline mb-4">
                        <label class="form-label" for="nic">Bio Description</label>

                        <textarea class="form-control form-control-lg border border-secondary"
                          id="bio-description-input" name="bio-description-input"></textarea>

                        <div class="invalid-feedback"></div>
                      </div>
                      <div class="form-outline mb-4">

                        <input type="submit" class="btn btn-secondary btn-block " value="Upload Image">

                      </div>
                    </form>

                    

                  </div>
                </div>
                <div id="profile-display-card">

                  <% if(myBio){%>
                    <div class="card-body p-5" id="display-card">
                      <div class="container">
                        <h2 class="text-uppercase text-center mb-5">My bio</h2>
                        <div class="row">
                          <div class="col-md-4 col-sm-6">
                            <% if(myBio.profileImg){%>

                              <img src="/uploads/<%=myBio.profileImg%>" id="profile-img" alt="image" class="img-fluid"
                                style="width: 180px; border-radius: 10px;">
                              <%}else{%>
                                <img
                                  src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-profiles/avatar-1.webp"
                                  id="profile-img" alt="Generic placeholder image" class="img-fluid"
                                  style="width: 180px; border-radius: 10px;">
                                <%}%>
                          </div>
                          <div class="col-md-8 col-sm-6">
                            <div class="form-outline mb-4">
                              <% if(myBio.profileBio){%>
                                <h5 id="bio-display"></h5>
                                <%=myBio.profileBio%>
                                  </p>
                                  <%}else{%>

                                    <h5 id="bio-display">
                                      Lorem ipsum dolor sit amet consectetur adipisicing elit. Praesentium magni itaque,
                                      quos
                                      veritatis labore nesciunt deleniti blanditiis dolore ducimus culpa consectetur
                                      temporibus
                                      tenetur quis error beatae accusantium sed, voluptas optio laudantium. Inventore,
                                      tempora
                                      in iure illo ex temporibus dignissimos fuga.
                                    </h5>
                                    <%}%>
                            </div>
                            <!-- current Employeemenet -->
                            <div class="form-outline mb-4">
                              <% if(myBio.bioEmployement){%>
                                <p id="bio-display"></p>
                                <h5>current Employeement</h5> <span>:<%=myBio.bioEmployement%></span>
                                </p>
                                <%}else{%>

                                  <p id="bio-display">
                                  <h3>current Employeement</h3><span>:</span>
                                  </p>
                                  <%}%>
                            </div>
                            <!-- current Employeemenet  location-->
                            <div class="form-outline mb-4">
                              <% if(myBio.bioEmployeeLocation){%>
                                <p id="bio-display"></p>
                                <h5>current Employeement location</h5> <span>:<%=myBio.bioEmployeeLocation%></span>
                                </p>
                                <%}else{%>

                                  <p id="bio-display">
                                  <h5>current Employeement location</h5> <span>:</span>
                                  </p>
                                  <%}%>
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>

                    <div class="d-flex justify-content-end">
                      <div class="p-2">
                        <!-- update cv-->
                        <div class="div">
                          <a href="/citizen/myProfile/profileImage/<%=myBio.userId%>" class="btn btn-secondary ">
                            <i class="bi bi-pencil-square" aria-hidden="true" style="color:#fff">
                            </i>
                          </a>
                        </div>

                      </div>

                      <div class="p-2">
                        <!-- remove cv -->
                        <form id="remove-myBio-form" method="POST">
                          <!-- action="/citizen/dashboard/myBio?_method=DELETE" -->

                          <button type="submit" value="submit" class="btn btn-danger ">
                            <i class="bi bi-trash3" aria-hidden="true" style="color:#fff"></i>
                          </button>
                        </form>
                      </div>

                    </div>
                </div>




                <% }%>






              </div>
            </div>
          </div>
        </div>
    </section>


