            <%if(citizenResults){%>

              <%citizenResults.forEach(citizen=>{%>


                <div class="col-md-4">
                  <div class="card mb-4 box-shadow">
                    <img class="card-img-top"
                      src="https://www.clipartmax.com/png/full/195-1957310_user-illustration.png" alt="Card image cap">
                    <div class="card-body">
                      <h4 class="card-title">
                        <% if(citizen.userName){%>
                          <%= citizen.userName %>
                            <% }%>

                              <small>
                                <% if(citizen.jobCategory){%>
                                  <%= citizen.jobCategory %>
                                    <% }%>
                              </small>
                      </h4>
                      <p class="card-text">
                      <p>24 years old</p>
                      <p>
                        <% if(citizen.highestQualificationType){%>
                          <%= citizen.highestQualificationType %>
                            <% }%>
                              <% if(citizen.highestQualificationName){%>
                                <%= citizen.highestQualificationName %>
                                  <% }%>
                                    -
                                    <% if(citizen.awardingbodyInput){%>
                                      <%= citizen.awardingbodyInput %>
                                        <% }%>


                      </p>

                      <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">
                          <button type="button" class="btn btn-sm btn-outline-secondary">View CV</button>
                          <button type="button" class="btn btn-sm btn-outline-secondary">View Certificates</button>
                        </div>
                        <% if(citizen.email){%>
                          <a href="https://mail.google.com/mail/?view=cm&fs=1&tf=1&to=<%=citizen.email%>"
                            target="_blank" class=" btn btn-sm btn-outline-secondary ">send mail</a>
                          <% }else{%>
                            <a href="https://mail.google.com/mail/?view=cm&fs=1&tf=1&to=" target="_blank"
                              class=" btn btn-sm btn-outline-secondary ">send mail</a>
                            <% }%>
                      </div>
                    </div>
                  </div>
                </div>

                <%})%>
