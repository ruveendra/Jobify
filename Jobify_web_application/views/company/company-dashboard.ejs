    <!-- pagination -->
    <div class="container container-fluid px-5 pb-3">


      <%if(citizenResults){%>
        <% let output='' %>
          <% citizenResults.length==1 ? output="Result" :output="Results" %>
            Showing <span class="text-primary">
              <%= citizenResults.length %>
            </span>
            <%=output%>
              <div class="btn-group float-md-right ml-3">
                <% if(page>1){ %>
                  <a href="/company/?page=<%=page-1%>" class="btn btn-lg btn-light"><span
                      class="fa fa-arrow-left"></span></a>
                  <%}%>
                    <div class="btn btn-lg btn-light ">
                      <%=page%>
                    </div>
                    <% if(page<pageCount){ %>
                      <a href="/company/?page=<%=page+1%>" class="btn btn-lg btn-light"><span
